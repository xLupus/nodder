<%- include('../partials/head') %>
<%- include('../partials/header') %>

<main class="flex flex-1 p-5 justify-center">
    <div class=" w-screen container">
        <h1 class="font-bold text-3xl mb-8">Categorias</h1>

        <div class="flex gap-6 flex-wrap">
            <% categories.forEach(category => {%>
                <a href="/categoria/<%=category.id%>/posts" class="flex flex-col flex-1 hover:scale-105 min-w-[280px] max-w-[300px] min-h-[170px] max-h-44 shadow-xl border">
                    <div class="border-b-2 mb-4 py-3 text-center">
                        <span class="font-bold group-hover:"><%= category.name %></span>
                    </div>
                    
                    <div class="px-3 pb-4 overflow-y-auto scroll-">
                        <span class="text-justify"><%= category.description %></span>
                    </div>                    
                </a>
            <% }) %>
        </div>

        <h1 class="font-bold text-3xl my-8">Tags</h1>

        <div class="flex gap-4 flex-wrap">
            <% tags.forEach(tag => { %>
                <a href="#" class="block bg-blue-100 text-blue-600 p-2 rounded-xl hover:scale-105"><%= tag.name %></a>
            <% }) %>
        </div>
    </div>
</main>

<%- include('../partials/footer') %>
